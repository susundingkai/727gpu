<!--index.wxml-->
<wxs module="filters" src="/utils/filter.wxs"></wxs>
<view class="container">
  <scroll-view scroll-y="true" class="scroll"> 
    <l-card type="primary" wx:for="{{machineIPs}}" id="{{item[0]}}" bindtap="go_detail" l-class="card" plaintext="{{true}}" title="{{item[0]}} ❤️{{item[1]}}">
      <l-card wx:for="{{gpuInfo[item[0]]}}" type="primary" plaintext="{{true}}" title="Id: {{item.GpuId}}">
        <view class="display_item" style="flex-direction:row;">
          <view class="content">Mem: {{filters.toFix(item.MemUsed)}} GB/ {{filters.toFix(item.MemTotal)}} GB</view>
          <view class="content">Util: {{item.GpuUtilRate}} %</view>
        </view>
      </l-card>
    </l-card>
  </scroll-view>
  <l-tab-bar list="{{list}}" />
</view>
